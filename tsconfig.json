{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@env/*": ["environments/*"],
      "@services": ["app/services"],
      "@modules": ["app/modules"],
      "@components": ["app/components"],
      "@directives": ["app/directives"],
      "@assets": ["assets/*"]
    },
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
